<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/foodback">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#14FFFFFF"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/dinner"
                app:tint="#EDE6E6"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/cafeHouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:fontFamily="cursive"
                android:gravity="center"
                android:text="Cafe House"
                android:textColor="#FAF4F4"
                android:textSize="60sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="80dp"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="#ECE5E5"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="#D31313"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/btnSignup"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:text="Registor"
                android:textAllCaps="false"
                android:textColor="#E6DBDB"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="#FD0D17BF"
                app:cornerRadius="10dp" />

            <TextView
                android:id="@+id/skIp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="Skip"
                android:textColor="#FAF1F1"
                android:textSize="24sp"
                android:textStyle="bold" />


</LinearLayout>

    </LinearLayout>
</ScrollView>
</RelativeLayout>









